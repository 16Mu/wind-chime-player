{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WindChime Player",
  "version": "0.5.0",
  "identifier": "com.windchime.player",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "WindChime Player", 
        "width": 1200,
        "height": 800,
        "minWidth": 950,
        "minHeight": 600,
        "maxWidth": null,
        "maxHeight": null,
        "decorations": false,
        "resizable": true,
        "transparent": false,
        "dragDropEnabled": false,
        "skipTaskbar": false,
        "additionalBrowserArgs": "--enable-gpu-rasterization --enable-zero-copy"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Wind",
    "copyright": "Copyright © 2025 Wind. All rights reserved.",
    "category": "Music",
    "shortDescription": "现代化音乐播放器",
    "longDescription": "WindChime Player 是一款现代化的跨平台音乐播放器，支持本地和远程音乐源，提供沉浸式歌词体验。",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  }
}
