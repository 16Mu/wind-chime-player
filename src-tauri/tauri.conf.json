{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "WindChime Player",
  "version": "0.3.1",
  "identifier": "com.windchime.player",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "WindChime Player", 
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "maxWidth": null,
        "maxHeight": null,
        "decorations": false,
        "resizable": true,
        "transparent": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Wind",
    "copyright": "Copyright © 2025 Wind. All rights reserved.",
    "category": "Music",
    "shortDescription": "现代化音乐播放器",
    "longDescription": "WindChime Player 是一款现代化的跨平台音乐播放器，支持本地和远程音乐源，提供沉浸式歌词体验。",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "nsis": {
        "languages": ["SimpChinese", "English"],
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico",
        "installMode": "perUser",
        "compression": "lzma",
        "template": null
      }
    }
  }
}
